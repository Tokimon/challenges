{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es5", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "outDir": "build"
  },
  "include": [
    "src/server.ts",
    "src/shared"
  ]
}
